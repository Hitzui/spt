<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<View fx:id="view" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dysconcsa.sondeo.views.DatosEstratigrafiaPresenter">
   <center>
      <VBox prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Tipo de Suelo" />
            <ComboBox fx:id="cmbTipoSuelo" minWidth="220.0" />
            <Label text="Descripcion del suelo" />
            <TextField fx:id="txtDescripcion" />
            <Label text="Patron del suelo" />
            <ComboBox fx:id="cmbPattern" minWidth="220.0" />
            <Label text="Profundidad" />
            <TextField fx:id="txtProfundidad" />
            <Label text="Limite liquido" />
            <TextField fx:id="txtLimiteLiquido" />
            <Label text="Indice de plasticidad" />
            <TextField fx:id="txtIndicePlasticidad" />
            <Label text="Color visual del suelo" />
            <ColorPicker fx:id="colorPicker" />
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="btnGuardar" mnemonicParsing="false" text="Guardar" />
               </children>
               <padding>
                  <Insets right="25.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</View>
